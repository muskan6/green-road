<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relativelayout"
    android:background="@drawable/colorbg1">

    <TextView
        android:text="                 CONTRIBUTOR OF THE MONTH"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/text1"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ea215a" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/winner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/winner" />

    <TextView
        android:text="Contributor not found at this moment!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/text2"
        android:layout_alignBottom="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="         In this week"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/text3"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="          In this month"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/text4"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignBottom="@+id/text3"
        android:layout_toEndOf="@+id/winner"
        android:layout_marginRight="10dp"
        android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="PotHole :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text3"
        android:layout_toStartOf="@+id/text2"
        android:layout_marginTop="30dp"
        android:id="@+id/pothole1"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Solved :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solved1"
        android:layout_alignBottom="@+id/text3"
        android:layout_marginBottom="18dp"
        android:layout_alignStart="@+id/bump1"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Bump :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bump1"
        android:layout_alignBaseline="@+id/bump2"
        android:layout_alignBottom="@+id/bump2"
        android:layout_alignStart="@+id/pothole1"
        android:textColor="@android:color/black" />

    <TextView
        android:text="PotHole :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pothole2"
        android:layout_alignBaseline="@+id/pothole1"
        android:layout_alignBottom="@+id/pothole1"
        android:layout_alignStart="@+id/text4"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Bump :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bump2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pothole2"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Solved :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solved2"
        android:layout_alignBaseline="@+id/solved1"
        android:layout_alignBottom="@+id/solved1"
        android:layout_alignStart="@+id/bump2"
        android:textColor="@android:color/black" />

    <TextView
        android:text="                                  REGISTERED"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/text1"
        android:layout_marginTop="32dp"
        android:id="@+id/text5"
        android:background="@android:color/white"
        android:layout_alignEnd="@+id/text1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Pot Holes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text5"
        android:layout_alignStart="@+id/text5"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:id="@+id/total_potholes"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Bumps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total_potholes"
        android:layout_centerHorizontal="true"
        android:id="@+id/total_bumps"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_solved"
        android:layout_alignBaseline="@+id/total_bumps"
        android:layout_alignBottom="@+id/total_bumps"
        android:layout_alignStart="@+id/solved2"
        android:layout_marginStart="32dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_p"
        android:layout_below="@+id/total_potholes"
        android:layout_toEndOf="@+id/pothole1" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_b"
        android:layout_below="@+id/total_bumps"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_s"
        android:layout_below="@+id/total_solved"
        android:layout_toEndOf="@+id/solved2" />

    <TextView
        android:text="         A road safety initiative for green roads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:background="#9ffcec"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

</RelativeLayout>